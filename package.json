{
  "name": "@samatech/postcss-colors",
  "version": "0.3.0",
  "description": "PostCSS plugin that provides various color related transforms",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "color",
    "hexrgba",
    "rgba"
  ],
  "author": "SamaTech <samatechtw@gmail.com>",
  "license": "MIT",
  "repository": "samatechtw/postcss-colors",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint --ext .js index.js test/",
    "format": "prettier -w \"{**/*,*}.{ts,js,json}\" --fix"
  },
  "engines": {
    "node": ">=12.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.21"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3"
  },
  "dependencies": {
    "postcss-value-parser": "^4.2.0"
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
